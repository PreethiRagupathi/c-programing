// c program to print to length of the given string without using strlen() function
#include <stdio.h>
#include<string.h>
int main() {
    
   char str[10];
   printf("enter a string:");
   scanf("%s",str);
   int i=0,count=0;
   for(i=0;str[i]!='\0';i++)
   {
       printf("%c",str[i]);
       count++;
   }
   printf("\n%d",count);
   return 0;
}
*****************************************************************************************
OUTPUT:
enter a string:hello
hello
5
*****************************************************************************************

