// write a c program to find maximum and minimum numbers in an array

#include <stdio.h>
void main()
{
    int n=5;
    int arr[n];
    printf("enter the elements in the array:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int max=arr[0],min=arr[n-1];
    for(int i=0;i<n;i++)
    {
        if(arr[i]>max)
        {
            max=arr[i];
        }
        if(arr[i]<min)
        {
            min=arr[i];
        }
    }
    printf("The largest number in the array is %d",max);
     printf("\nThe smallest number in the array is %d",min);
}

**************************************************************************************************************
OUTPUT:
enter the elements in the array:4
98
34
67
1
The largest number in the array is 98
The smallest number in the array is 1
***************************************************************************************************************
