#include <stdio.h>
int main() {
    char lowercase, uppercase;
    printf("Enter a lowercase letter: ");
    scanf("%c", &lowercase);
    if (lowercase >= 'a' && lowercase <= 'z') {
        uppercase = lowercase - ('a' - 'A');
        printf("The uppercase letter is: %c\n", uppercase);
    } else {
        printf("The entered character is not a lowercase letter.\n");
    }

    return 0;
}
*****************************************************************************************
OUTPUT:
Enter a lowercase letter: v
The uppercase letter is: V
*****************************************************************************************
