//c program to calculate compound interst//
#include <stdio.h>
#include <math.h>
void main()
{
    double p,rate,time,compound_interest,total_amount;
    int n;
    printf("Enter the principle amount:");
    scanf("%lf",&p);
    printf("Enter the annual interest rate(in percentage):\n");
    scanf("%lf",&rate);
    printf("Enter the time (in year):\n");
    scanf("%lf",&time);
    printf("Enter the number of times interest is compound per year:\n");
    scanf("%d",&n);
    compound_interest=p*pow((1+rate/100*n),n*time);
    printf("compound Interest=%2lf\n",compound_interest);
}
***********************************************************************************
OUTPUT:
Enter the principle amount:200
Enter the annual interest rate(in percentage):
12
Enter the time (in year):
4
Enter the number of times interest is compound per year:
4
compound Interest=105978.420371
***********************************************************************************
