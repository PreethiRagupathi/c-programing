//c program to find area and perimeter for the rectangle
#include<stdio.h>
int main()
{
    int l,w,z;
    printf("enter l,w:");
    scanf("%d %d",&l,&w);
   
    printf("perimetr of the rectangle:%d",2*(l+w));
    printf("area of the square:%d",l*w);
    return 0;
}
***********************************************************************
OUTPUT:
enter l,w:
6
8
perimetr of the rectangle:28
area of the square:48
************************************************************************

