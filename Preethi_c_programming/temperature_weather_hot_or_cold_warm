// C program to say weather the temperature is hot or warm or hold
#include <stdio.h>

int main() {
    float temperature;
    printf("Enter the temperature in Celsius: ");
    scanf("%f", &temperature);

    if (temperature > 30) {
        printf("Hot\n");
    } else if (temperature >= 20 && temperature <= 30) {
        printf("Warm\n");
    } else {
        printf("Cold\n");
    }

    return 0;
}

*****************************************************************************
OUTPUT:
Enter the temperature in Celsius: 34
Hot
*****************************************************************************
