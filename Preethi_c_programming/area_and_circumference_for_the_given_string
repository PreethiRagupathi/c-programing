//Calculating the area and circumference for the circle
#include <stdio.h>
int main() {
    float  PI= 3.14159 ;
    float radius, area, circumference;
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);
    area = PI * radius * radius;
    circumference = 2 * PI * radius;
    printf("Area of the circle: %.2f\n", area);
    printf("Circumference of the circle: %.2f\n", circumference);

    return 0;
}
**********************************************************************
    OUTPUT:
Enter the radius of the circle: 56.7
Area of the circle: 10099.87
Circumference of the circle: 356.26
*********************************************************************
