// c program to calculate simple interest
#include<stdio.h>
void main()
{
    int p,n,r;
    printf("enter p\n n \n r");
    scanf("%d %d %d",&p,&n,&r);
    printf("simple interest:%d",(p*n*r)/100);
}
*************************************************
OUTPUT:
enter p
 n 
 r
8
5
92
simple interest:36
*************************************************
