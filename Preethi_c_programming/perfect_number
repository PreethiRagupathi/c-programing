#include<stdio.h>
int main()
{
    int n,sum=0;
   printf("enter a number n:");
   scanf("%d",&n);
   for(int i=1;i<=n/2;i++)
   {
       if(n%i==0)
       {
           sum+=i;
       }
   }
   if(sum==n&&n!=0)
   {
       printf("perfect number");
   }
   else
   {
       printf("not a prime number");
   }
   return 1;
    
}
***************************************************************************************
OUTPUT:
enter a number:6
perfect number
***************************************************************************************
